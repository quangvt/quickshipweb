@using QuickShipWeb.Models;
@model QuickShipWeb.Models.CMB_DELIVERY_ORDER_PACKAGE

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index2</h2>

<p><b>Delivery Order Information</b></p>

@*Header Data = Delivery Order Information*@
<div class="container-fluid hd_border">
    <div class="row">
        <div class="col-md-2">ID</div>
        <div class="col-md-3">Code</div>
        <div class="col-md-4">Create Date</div>
        <div class="col-md-3"></div>
    </div>
    @foreach (SHP_DELIVERY_ORDER del_order in Model.Delivery_Orders)
    {
        <div class="row">
            <div class="col-md-2">@del_order.Id</div>
            <div class="col-md-3">@del_order.Delivery_Order</div>
            <div class="col-md-4">@del_order.Create_Order_Date</div>
            <div>
                @Html.ActionLink("Edit", "Edit", new { id = del_order.Id }) |
                @Html.ActionLink("Details", "DetailsViewModel", new { id = del_order.Id }) |
                @Html.ActionLink("Delete", "DeleteViewModel", new { id = del_order.Id })
            </div>
        </div>
    }
</div>

@*Detail Data = Packages Information of Delivery Order*@
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">ID</div>
        <div class="col-md-3">Code</div>
        <div class="col-md-4">Create Date</div>
        <div class="col-md-3"></div>
    </div>
    
</div>