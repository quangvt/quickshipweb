<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- Overview of CSS Framework Bootstrap: http://getbootstrap.com/css/ -->
    <!-- This is Mobile First design of CSS-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - My Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @*Datatables Style*@
    @*<link rel="stylesheet" type="text/css" 
          href="//cdn.datatables.net/1.10.0/css/jquery.dataTables.css" />*@
    <link rel="stylesheet" type="text/css"
          href=@Url.Content("~/Content/DataTables/css/jquery.dataTables.css") />
    @*<link rel="stylesheet" type="text/css" 
          href="//cdn.datatables.net/plug-ins/be7019ee387/integration/bootstrap/3/dataTables.bootstrap.css" />*@
 <link rel="stylesheet" type="text/css"
       href=@Url.Content("~/Content/DataTables/css/dataTables.bootstrap.css") />
    @*ColReorder extenstion*@
    @*<link rel="stylesheet" type="text/css" 
          href="//cdn.datatables.net/colreorder/1.1.1/css/dataTables.colReorder.css">*@
    <link rel="stylesheet" type="text/css"
          href=@Url.Content("~/Content/DataTables/css/colReorder.dataTables.min.css") />
    @*The ColVis extension*@
    @*<link rel="stylesheet" type="text/css" 
          href="//cdn.datatables.net/colvis/1.1.0/css/dataTables.colVis.css">*@
    @*<link rel="stylesheet" type="text/css"
          href=@Url.Cont*@ent("~/Content/DataTables/css/dataTables.colVis.css") />
    @*TableTools*@
    @*<link rel="stylesheet" type="text/css" 
          href="//cdn.datatables.net/tabletools/2.2.1/css/dataTables.tableTools.css">*@
    @*<link rel="stylesheet" type="text/css"
          href=@Url.Content("~/Content/DataTables/css/dataTables.tableTools.css") />*@
    <!-- [if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="containter">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Demo App", "Index", "Home", null, new { @class="navbar-brand"})
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Customer", "Index", "MST_CUSTOMER")</li>
                    <li>@Html.ActionLink("Location", "Index", "MST_LOCATION")</li>
                    <li>@Html.ActionLink("Delivery Order", "Index", "SHP_DELIVERY_ORDER")</li>
                    <li>@Html.ActionLink("Package", "Index", "SHP_PACKAGE")</li>
                </ul>
                @Html.Partial("_BackendMenuPartial")
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        <hr />
        <hr/>
        <div>
            <ol class="breadcrumb">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Customer", "Index", "MST_CUSTOMER")</li>
                <li class="active">TestBreadcumb</li>
            </ol>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @*<script src="~/hubs"></script>*@
</body>
</html>
